---
// src/components/Favoritos.astro
const favList = [
  { src: "fav1.png", label: "Producto 1" },
  { src: "fav2.png", label: "Producto 2" },
  { src: "fav3.png", label: "Producto 3" },
  { src: "fav4.png", label: "Producto 4" },
  { src: "fav5.png", label: "Producto 5" },
  { src: "fav6.png", label: "Producto 6" },
  { src: "fav7.png", label: "Producto 7" },
  { src: "fav8.png", label: "Producto 8" },
  { src: "fav9.png", label: "Producto 9" },
  { src: "fav10.png", label: "Producto 10" },
  { src: "fav11.png", label: "Producto 11" },
  { src: "fav12.png", label: "Producto 12" },
  { src: "fav13.png", label: "Producto 13" },
  { src: "fav14.png", label: "Producto 14" },
  { src: "fav15.png", label: "Producto 15" },
  { src: "fav16.png", label: "Producto 16" },
  { src: "fav17.png", label: "Producto 17" },
  { src: "fav18.png", label: "Producto 18" },
];
---

<!-- Sección de Productos -->
<main class="container mx-auto px-4 py-10">
  <section id="productos" class="py-16">
    <h2 class="text-3xl font-bold text-center mb-8">Nuestros Productos</h2>

    <!-- Mostrar productos listados-->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      {
        favList.map((img) => (
          <div class="bg-white shadow-md rounded-lg p-6">
            <img src={img.src} alt={img.label} class="mb-4" />
            <h3 class="text-xl font-semibold">{img.label}</h3>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Sección de Historia -->
  <section id="historia" class="bg-gray-100 py-16">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-8">Nuestra Historia</h2>
      <p class="text-center max-w-2xl mx-auto">
        Fruna es una empresa con más de 50 años en el mercado...
      </p>
    </div>
  </section>

  <!-- Sección de Contacto -->
  <section id="contacto" class="py-16">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-8">Contacto</h2>
      <form class="max-w-md mx-auto space-y-4">
        <input
          type="text"
          placeholder="Nombre"
          class="w-full p-4 border rounded-md"
          required
        />
        <input
          type="email"
          placeholder="Correo"
          class="w-full p-4 border rounded-md"
          required
        />
        <textarea
          placeholder="Mensaje"
          class="w-full p-4 border rounded-md"
          rows="4"></textarea>
        <button
          type="submit"
          class="w-full bg-red-500 text-white py-3 rounded-md">Enviar</button
        >
      </form>
    </div>
  </section>
</main>
