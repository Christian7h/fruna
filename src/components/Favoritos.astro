---
// src/components/Favoritos.astro
const favList = [
  { src: "/assets/fav1.png", label: "Producto 1" },
  { src: "/assets/fav2.png", label: "Producto 2" },
  { src: "/assets/fav3.png", label: "Producto 3" },
  { src: "/assets/fav4.png", label: "Producto 4" },
  { src: "/assets/fav5.png", label: "Producto 5" },
  { src: "/assets/fav6.png", label: "Producto 6" },
  { src: "/assets/fav7.png", label: "Producto 7" },
  { src: "/assets/fav8.png", label: "Producto 8" },
  { src: "/assets/fav9.png", label: "Producto 9" },
  { src: "/assets/fav10.png", label: "Producto 10" },
  { src: "/assets/fav11.png", label: "Producto 11" },
  { src: "/assets/fav12.png", label: "Producto 12" },
  { src: "/assets/fav13.png", label: "Producto 13" },
  { src: "/assets/fav14.png", label: "Producto 14" },
  { src: "/assets/fav15.png", label: "Producto 15" },
  { src: "/assets/fav16.png", label: "Producto 16" },
  { src: "/assets/fav17.png", label: "Producto 17" },
  { src: "/assets/fav18.png", label: "Producto 18" },
];
---

<!-- Sección de Productos -->
<main class="container mx-auto px-4 py-10">
  <section id="productos" class="py-16">
    <h2 class="chewy-text text-5xl font-bold text-red-500 text-center mb-2">¿Cuáles son tus favoritos?</h2>
    <p class="text-base font-bold text-gray-500 text-center mb-4">Aquí podrás conocer todos nuestros deliciosos productos

    </p>

    <!-- Mostrar productos listados-->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      {
        favList.map((img) => (
          <div class="bg-white shadow-md rounded-lg p-6 buzz-out-on-hover">
            <img src={img.src} alt={img.label} class="mb-4" />
            <h3 class="text-xl font-semibold">{img.label}</h3>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Sección de Historia -->
  <section id="historia" class="bg-gray-100 py-16">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-8">Nuestra Historia</h2>
      <p class="text-center max-w-2xl mx-auto">
        Fruna es una empresa con más de 50 años en el mercado...
      </p>
    </div>
  </section>

  <!-- Sección de Contacto -->
  <section id="contacto" class="py-16">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-8">Contacto</h2>
      <form class="max-w-md mx-auto space-y-4">
        <input
          type="text"
          placeholder="Nombre"
          class="w-full p-4 border rounded-md"
          required
        />
        <input
          type="email"
          placeholder="Correo"
          class="w-full p-4 border rounded-md"
          required
        />
        <textarea
          placeholder="Mensaje"
          class="w-full p-4 border rounded-md"
          rows="4"></textarea>
        <button
          type="submit"
          class="w-full bg-red-500 text-white py-3 rounded-md">Enviar</button
        >
      </form>
    </div>
  </section>
</main>
<style>
/*====================*/
/* BUZZ OUT
/*====================*/

@-webkit-keyframes buzz-out-on-hover {
  10% {
    -webkit-transform: translateX(3px) rotate(2deg);
    transform: translateX(3px) rotate(2deg);
  }
  20% {
    -webkit-transform: translateX(-3px) rotate(-2deg);
    transform: translateX(-3px) rotate(-2deg);
  }
  30% {
    -webkit-transform: translateX(3px) rotate(2deg);
    transform: translateX(3px) rotate(2deg);
  }
  40% {
    -webkit-transform: translateX(-3px) rotate(-2deg);
    transform: translateX(-3px) rotate(-2deg);
  }
  50% {
    -webkit-transform: translateX(2px) rotate(1deg);
    transform: translateX(2px) rotate(1deg);
  }
  60% {
    -webkit-transform: translateX(-2px) rotate(-1deg);
    transform: translateX(-2px) rotate(-1deg);
  }
  70% {
    -webkit-transform: translateX(2px) rotate(1deg);
    transform: translateX(2px) rotate(1deg);
  }
  80% {
    -webkit-transform: translateX(-2px) rotate(-1deg);
    transform: translateX(-2px) rotate(-1deg);
  }
  90% {
    -webkit-transform: translateX(1px) rotate(0);
    transform: translateX(1px) rotate(0);
  }
  100% {
    -webkit-transform: translateX(-1px) rotate(0);
    transform: translateX(-1px) rotate(0);
  }
}

@keyframes buzz-out-on-hover {
  10% {
    -webkit-transform: translateX(3px) rotate(2deg);
    transform: translateX(3px) rotate(2deg);
  }
  20% {
    -webkit-transform: translateX(-3px) rotate(-2deg);
    transform: translateX(-3px) rotate(-2deg);
  }
  30% {
    -webkit-transform: translateX(3px) rotate(2deg);
    transform: translateX(3px) rotate(2deg);
  }
  40% {
    -webkit-transform: translateX(-3px) rotate(-2deg);
    transform: translateX(-3px) rotate(-2deg);
  }
  50% {
    -webkit-transform: translateX(2px) rotate(1deg);
    transform: translateX(2px) rotate(1deg);
  }
  60% {
    -webkit-transform: translateX(-2px) rotate(-1deg);
    transform: translateX(-2px) rotate(-1deg);
  }
  70% {
    -webkit-transform: translateX(2px) rotate(1deg);
    transform: translateX(2px) rotate(1deg);
  }
  80% {
    -webkit-transform: translateX(-2px) rotate(-1deg);
    transform: translateX(-2px) rotate(-1deg);
  }
  90% {
    -webkit-transform: translateX(1px) rotate(0);
    transform: translateX(1px) rotate(0);
  }
  100% {
    -webkit-transform: translateX(-1px) rotate(0);
    transform: translateX(-1px) rotate(0);
  }
}

.buzz-out-on-hover {
  display: inline-block;
  vertical-align: middle;
  -webkit-transform: perspective(1px) translateZ(0);
  transform: perspective(1px) translateZ(0);
  box-shadow: 0 0 1px rgba(0, 0, 0, 0);
}

.buzz-out-on-hover:hover,
.buzz-out-on-hover:focus,
.buzz-out-on-hover:active {
  -webkit-animation-name: buzz-out-on-hover;
  animation-name: buzz-out-on-hover;
  -webkit-animation-duration: 0.75s;
  animation-duration: 0.75s;
  -webkit-animation-timing-function: linear;
  animation-timing-function: linear;
  -webkit-animation-iteration-count: 1;
  animation-iteration-count: 1;
}
</style>