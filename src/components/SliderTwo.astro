---
//src/pages/index.astro
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";
import "swiper/css/effect-fade";
import Ground from "./icon/Ground.astro";
---

<!-- Main Section with Background and SVG -->
<section class="relative bg-cover bg-center py-8">
  <!-- Top SVG Shape -->
  <div class="absolute inset-x-0 top-0">
    <Ground />
  </div>

  <!-- Container for Swiper and Text -->
  <div class="container mx-auto flex flex-col md:flex-row justify-between items-center relative z-10">
    
    <!-- Left Section: Swiper Carousel -->
    <div class="md:w-1/2">
      <!-- Slider main container -->
      <div class="swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          <!-- Slides -->
          <div class="swiper-slide" data-swiper-autoplay="2000">
            <img
              src="balde1.png"
              alt="balde 1 fruna"
              class="w-full"
            />
          </div>
          <div class="swiper-slide" data-swiper-autoplay="3000">
            <img
              src="balde2.png"
              alt="balde 2 fruna"
              class="w-full"
            />
          </div>
          <div class="swiper-slide" data-swiper-autoplay="4000">
            <img
              src="balde3.png"
              alt="balde 3 fruna"
              class="w-full"
            />
          </div>
          <div class="swiper-slide" data-swiper-autoplay="4000">
            <img
              src="balde4.png"
              alt="balde 4 fruna"
              class="w-full"
            />
          </div>
        </div>
        <!-- Pagination -->
        <div class="swiper-pagination"></div>

        <!-- Navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
    </div>

    <!-- Right Section: Text and Button -->
    <div class="text-black md:w-1/2 text-left space-y-6">
      <h2 class="text-5xl md:text-7xl font-bold leading-tight md:ml-8">
        Los Baldes<br />son de Fruna
      </h2>
    
    </div>
  </div>
</section>

<style>
  .swiper {
    width: 600px;
    height: auto;
  }
</style>

<script>
  import Swiper from "swiper";
  import { Pagination, Navigation, EffectFade, Autoplay } from "swiper/modules";

  document.addEventListener("astro:page-load", () => {
    const swiper = new Swiper(".swiper", {
      autoplay: {
        delay: 2000, // Global autoplay delay (2 seconds)
      },
      effect: "fade", // Efecto de desvanecimiento
      fadeEffect: {
        crossFade: true, // Suaviza la transición entre diapositivas
      },
      loop: true, // Activa el bucle infinito
      pagination: {
        el: ".swiper-pagination",
        clickable: true, // Hace que los puntos de paginación sean clicables
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      modules: [Pagination, Navigation, EffectFade, Autoplay], // Módulos de Swiper
    });
  });
</script>
