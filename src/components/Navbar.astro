---
// src/components/Navbar.astro

---
  <header class="text-white bg-red-500">
    <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
        <a href="/" class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
            <img src="logo-fruna-la-dulceria-de-chile-2.png" alt="Fruna Logo" class="h-24">
        <span class="text-white text-3xl">Alpha</span>
      </a>
      <nav class="md:ml-auto md:mr-auto flex flex-wrap items-center font-medium text-lg justify-center">
        <a href="/"             class="nav-link mr-5">Inicio</a>
        <a href="/productos"    class="nav-link mr-5">Productos</a>
        <a href="/dulcerias"    class="nav-link mr-5">Dulcerias</a>
      </nav>
      <a href="/contacto" class=" hiddeninline-flex items-center bg-red-600 border-0 py-1 px-3 focus:outline-none hover:bg-red-400 rounded text-base mt-4 md:mt-0">
        Contacto
        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
          <path d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </header>

<style>
  /* Apply underline fill effect */
  .nav-link {
    position: relative;
    display: inline-block;
  }
  
  .nav-link::after {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    width: 0%;
    content: '';
    color: transparent;
    background: #ffffff;
    height: 2px;
    transition: width 0.4s, opacity 0.4s;
  }
  
  .nav-link:hover::after {
    width: 100%;
    opacity: 1;
  }
  
  .nav-link:hover {
    color: #ffffff;
  }
</style>