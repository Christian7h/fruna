---
import Clock from "../components/icon/Clock.astro";
import Phone from "../components/icon/Phone.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contacto - Fruna">
  <main class="container mx-auto px-32">
    <div class="container mx-auto" id="page">
      <div class="site-content" id="content">
        <section class="container mx-auto">
          <!-- Contenedor Flex para el formulario y la información de contacto -->
          <div class="flex flex-col lg:flex-row justify-between items-center lg:items-start gap-8">
            
            <!-- Sección del Formulario (a la izquierda) -->
            <section class="py-8 lg:w-1/2">
              <div class="contact_form bg-gray-100 rounded-lg p-6">
                <h1 class="chewy-text text-3xl font-bold text-red-600 mb-1 text-center">
                  Formulario de contacto
                </h1>
                <h3 class="text-gray-700 mb-1">
                  Escríbenos y en breve nos pondremos en contacto contigo
                </h3>
        
                <form action="submeter-formulario.php" method="post">
                  <div class="mb-4">
                    <label for="nombre" class="block text-sm font-medium text-gray-700">
                      Nombre
                      <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="text"
                      name="introducir_nombre"
                      id="nombre"
                      required
                      placeholder="Escribe tu nombre"
                      class="mt-1 block w-full border border-red-600 rounded-md p-2 focus:ring focus:ring-red-500"
                    />
                  </div>
        
                  <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700">
                      Email
                      <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="email"
                      name="introducir_email"
                      id="email"
                      required
                      placeholder="Escribe tu Email"
                      class="mt-1 block w-full border border-red-600 rounded-md p-2 focus:ring focus:ring-red-500"
                    />
                  </div>
        
                  <div class="mb-4">
                    <label for="telefono" class="block text-sm font-medium text-gray-700">
                      Teléfono
                    </label>
                    <input
                      type="tel"
                      name="introducir_telefono"
                      id="telefono"
                      placeholder="Escribe tu teléfono"
                      class="mt-1 block w-full border border-red-600 rounded-md p-2 focus:ring focus:ring-red-500"
                    />
                  </div>
        
                  <div class="mb-4">
                    <label for="asunto" class="block text-sm font-medium text-gray-700">
                      Asunto
                      <span class="text-red-500">*</span>
                    </label>
                    <input
                      type="text"
                      name="introducir_asunto"
                      id="asunto"
                      required
                      placeholder="Escribe un asunto"
                      class="mt-1 block w-full border border-red-600 rounded-md p-2 focus:ring focus:ring-red-500"
                    />
                  </div>
        
                  <div class="mb-4">
                    <label for="mensaje" class="block text-sm font-medium text-gray-700">
                      Mensaje
                      <span class="text-red-500">*</span>
                    </label>
                    <textarea
                      name="introducir_mensaje"
                      class="mt-1 block w-full border border-red-600 rounded-md p-2 focus:ring focus:ring-red-500"
                      id="mensaje"
                      required
                      placeholder="Deja aquí tu comentario..."
                    ></textarea>
                  </div>
        
                  <button
                    type="submit"
                    name="enviar_formulario"
                    id="enviar"
                    class="w-full bg-red-600 text-white py-2 rounded-md hover:bg-red-700 transition"
                  >
                    Enviar
                  </button>
        
                  <p class="mt-2 text-sm text-gray-600">
                    <span class="text-red-500">*</span> Los campos son obligatorios.
                  </p>
                </form>
              </div>
            </section>
        
            <!-- Sección de Contáctanos + Horarios y Teléfonos (a la derecha) -->
            <section class="py-8 lg:w-1/2 flex flex-col justify-center items-center">
              <div class="bg-gray-100 rounded-lg p-6 w-full">
                <!-- Texto de Contáctanos -->
                <div class="text-center lg:text-center mb-8">
                  <h2 class="chewy-text text-5xl font-bold text-red-600">Contáctanos</h2>
                  <p class="mt-2">¡Queremos saber de ti!</p>
                  <p class="mt-4">
                    Gracias por visitar nuestra página web. Contáctanos a través de los
                    siguientes medios.
                  </p>
                </div>

                <!-- Horarios y Teléfonos -->
                <div class="grid grid-cols-1 gap-6 text-center items-center content-center">
                  <div class="text-center items-center">
                    <h3 class="text-xl font-bold">Horarios Venta de Helados</h3>
                    <ul class="mt-2 text-center">
                      <li class="flex items-center space-x-2 justify-center">
                        <Clock />
